<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="10"
        android:columnCount="7"
        android:background="#FF0000"
        >

                    <!-- Row 1 -->

        <Button
            android:id="@+id/btnClear"
            android:text="AC"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/NumberText"
            android:background="@color/NumberBG"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

        <Button
            android:id="@+id/btnOpenBracket"
            android:text="("
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/NumberText"
            android:background="@color/NumberBG"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

        <Button
            android:id="@+id/btnCloseBracket"
            android:text=")"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/NumberText"
            android:background="@color/NumberBG"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

        <Button
            android:id="@+id/btnBack"
            android:text="←"
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="@color/NumberText"
            android:background="@color/NumberBG"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

                        <!-- Row 2 -->

        <Button
            android:id="@+id/btnPie"
            android:text="π"
            android:textSize="13dp"
            android:textStyle="bold"
            android:textColor="@color/NumberText"
            android:background="@color/NumberBG"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

        <Button
            android:id="@+id/btnTg"
            android:text="Tg"
            android:textSize="13dp"
            android:textStyle="bold"
            android:textColor="@color/NumberText"
            android:background="@color/NumberBG"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

        <Button
            android:id="@+id/btnRad"
            android:text="rad"
            android:textSize="13dp"
            android:textStyle="bold"
            android:textColor="@color/NumberText"
            android:background="@color/NumberBG"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

        <Button
            android:id="@+id/btnTan"
            android:text="tan"
            android:textSize="13dp"
            android:textStyle="bold"
            android:textColor="@color/NumberText"
            android:background="@color/NumberBG"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

        <!-- Row 3 -->

        <Button
            android:id="@+id/btnLn"
            android:text="ln"
            android:textSize="13dp"
            android:textStyle="bold"
            android:textColor="@color/NumberText"
            android:background="@color/NumberBG"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

        <Button
            android:id="@+id/btnExp"
            android:text="exp"
            android:textSize="13dp"
            android:textStyle="bold"
            android:textColor="@color/NumberText"
            android:background="@color/NumberBG"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

        <Button
            android:id="@+id/btnLog2"
            android:text="log 2"
            android:textSize="13dp"
            android:textStyle="bold"
            android:textColor="@color/NumberText"
            android:background="@color/NumberBG"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

        <Button
            android:id="@+id/btnLog10"
            android:text="log 10"
            android:textSize="13dp"
            android:textStyle="bold"
            android:textColor="@color/NumberText"
            android:background="@color/NumberBG"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

        <!-- Row 4 -->

        <Button
            android:id="@+id/btnCsc"
            android:text="csc"
            android:textSize="13dp"
            android:textStyle="bold"
            android:textColor="@color/NumberText"
            android:background="@color/NumberBG"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

        <Button
            android:id="@+id/btnCot"
            android:text="cot"
            android:textSize="13dp"
            android:textStyle="bold"
            android:textColor="@color/NumberText"
            android:background="@color/NumberBG"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

        <Button
            android:id="@+id/btnSec"
            android:text="sec"
            android:textSize="13dp"
            android:textStyle="bold"
            android:textColor="@color/NumberText"
            android:background="@color/NumberBG"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

        <Button
            android:id="@+id/btnCosec"
            android:text="cosec"
            android:textSize="13dp"
            android:textStyle="bold"
            android:textColor="@color/NumberText"
            android:background="@color/NumberBG"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

        <!-- Row 5 -->

        <Button
            android:id="@+id/btnFactorial"
            android:text="!"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/NumberText"
            android:background="@color/NumberBG"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

        <Button
            android:id="@+id/btnSin"
            android:text="sin"
            android:textSize="13dp"
            android:textStyle="bold"
            android:textColor="@color/NumberText"
            android:background="@color/NumberBG"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

        <Button
            android:id="@+id/btnCos"
            android:text="cos"
            android:textSize="13dp"
            android:textStyle="bold"
            android:textColor="@color/NumberText"
            android:background="@color/NumberBG"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

        <Button
            android:id="@+id/btnShift"
            android:text="↑"
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="@color/NumberText"
            android:background="@color/NumberBG"
            android:layout_row="4"
            android:layout_column="3"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

        <!-- Row 6 -->

        <Button
            android:id="@+id/btnModulo"
            android:text="#"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/NumberText"
            android:background="@color/NumberBG"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

        <Button
            android:id="@+id/btnPower"
            android:text="^"
            android:textSize="17dp"
            android:textStyle="bold"
            android:textColor="@color/NumberText"
            android:background="@color/NumberBG"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

        <Button
            android:id="@+id/btnDivide"
            android:text="÷"
            android:textSize="17dp"
            android:textStyle="bold"
            android:textColor="@color/NumberText"
            android:background="@color/NumberBG"
            android:layout_row="5"
            android:layout_column="2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

        <Button
            android:id="@+id/btnMultiply"
            android:text="X"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/NumberText"
            android:background="@color/NumberBG"
            android:layout_row="5"
            android:layout_column="3"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />


        <!-- Row 7 -->

        <Button
            android:id="@+id/btnSeven"
            android:text="7"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/NumberText"
            android:background="@color/NumberBG"
            android:layout_row="6"
            android:layout_column="0"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

        <Button
            android:id="@+id/btnEight"
            android:text="8"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/NumberText"
            android:background="@color/NumberBG"
            android:layout_row="6"
            android:layout_column="1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

        <Button
            android:id="@+id/btnNine"
            android:text="9"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/NumberText"
            android:background="@color/NumberBG"
            android:layout_row="6"
            android:layout_column="2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

        <Button
            android:id="@+id/btnAdd"
            android:text="+"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/NumberText"
            android:background="@color/NumberBG"
            android:layout_row="6"
            android:layout_column="3"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

        <!-- Row 8 -->

        <Button
            android:id="@+id/btnFour"
            android:text="4"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/NumberText"
            android:background="@color/NumberBG"
            android:layout_row="7"
            android:layout_column="0"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

        <Button
            android:id="@+id/btnFive"
            android:text="5"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/NumberText"
            android:background="@color/NumberBG"
            android:layout_row="7"
            android:layout_column="1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

        <Button
            android:id="@+id/btnSix"
            android:text="6"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/NumberText"
            android:background="@color/NumberBG"
            android:layout_row="7"
            android:layout_column="2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

        <Button
            android:id="@+id/btnMinus"
            android:text="-"
            android:textSize="17dp"
            android:textStyle="bold"
            android:textColor="@color/NumberText"
            android:background="@color/NumberBG"
            android:layout_row="7"
            android:layout_column="3"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

        <!-- Row 9 -->

        <Button
            android:id="@+id/btnOne"
            android:text="1"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/NumberText"
            android:background="@color/NumberBG"
            android:layout_row="8"
            android:layout_column="0"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

        <Button
            android:id="@+id/btnTwo"
            android:text="2"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/NumberText"
            android:background="@color/NumberBG"
            android:layout_row="8"
            android:layout_column="1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

        <Button
            android:id="@+id/btnThree"
            android:text="3"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/NumberText"
            android:background="@color/NumberBG"
            android:layout_row="8"
            android:layout_column="2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

        <Button
            android:id="@+id/btnEqual"
            android:text="="
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/NumberText"
            android:background="@color/NumberBG"
            android:layout_row="8"
            android:layout_column="3"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_rowSpan="2"
            />

        <!-- Row 10 -->

        <Button
            android:id="@+id/btnZero"
            android:text="0"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/NumberText"
            android:background="@color/NumberBG"
            android:layout_row="9"
            android:layout_column="0"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

        <Button
            android:id="@+id/btnDecimal"
            android:text="."
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/NumberText"
            android:background="@color/NumberBG"
            android:layout_row="9"
            android:layout_column="1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

        <Button
            android:id="@+id/btnDoubleZero"
            android:text="00"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/NumberText"
            android:background="@color/NumberBG"
            android:layout_row="9"
            android:layout_column="2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />



    </GridLayout>

</LinearLayout>